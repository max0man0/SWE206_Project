<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="userInterface.MainController">
   <center>
      <VBox prefHeight="500.0" prefWidth="600.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="Competition Name:" />
                  <TextField fx:id="tfCreateCompetitionName" />
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding></HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" spacing="10.0">
               <children>
                  <Label text="Competition Website:" />
                  <TextField fx:id="tfCreateCompetitionWebsite" />
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" spacing="10.0">
               <children>
                  <Label text="Due Date:" />
                  <DatePicker fx:id="dpCreateCompetitionDueDate" />
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="Competition Type" />
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <RadioButton mnemonicParsing="false" text="Team Based">
                           <toggleGroup>
                              <ToggleGroup fx:id="competitionType" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton mnemonicParsing="false" text="Individual Based" toggleGroup="$competitionType" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </VBox>
         </children>
         <padding>
            <Insets top="50.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#createCompetition" text="Create" />
            <Button mnemonicParsing="false" onAction="#closeWindow" text="Cancel" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
