<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="userInterface.MainController">
   <center>
      <VBox prefHeight="500.0" prefWidth="600.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="Student Name:" />
                  <TextField fx:id="tfAddStudentNameTeam" />
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding></HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" spacing="10.0">
               <children>
                  <Label text="Student ID:" />
                  <TextField fx:id="tfAddStudentIDTeam" />
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="191.0" spacing="10.0">
               <children>
                  <Label text="Major:" />
                  <TextField fx:id="tfAddStudentMajorTeam" />
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="247.0" spacing="10.0">
               <children>
                  <Label text="Team Name:" />
                  <TextField fx:id="tfAddStudentTeam" />
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets top="50.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btAddParticipantTeam" mnemonicParsing="false" onAction="#addParticipant" text="Add" />
            <Button mnemonicParsing="false" onAction="#closeWindow" text="Cancel" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
   <top>
      <HBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Competition:">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <ComboBox fx:id="cbCompetitionTeam" prefWidth="200.0" promptText="Competition" />
         </children>
         <padding>
            <Insets left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
</BorderPane>
